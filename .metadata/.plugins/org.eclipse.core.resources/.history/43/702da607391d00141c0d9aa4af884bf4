	private void printLadderCol(int rawNum){
		for(int j = 0; j < personCount; j++){
			definePrint(column[j].getDirection(rawNum));
		}
		System.out.println();		
	}
	
	private void definePrint(int direction){
		if(direction == 1){
			System.out.print("¦§");
		} else if(direction == -1){
			System.out.print("¦©");
		} else {
			System.out.print("¦¢");
		}		
	}
