import java.util.Scanner;


public class Init {

	Scanner sc = new Scanner(System.in);
	
	public Init(){
		
	}
	
	public int getPeopleCount(){
		
		int pCount;
		
		System.out.print("인원수를 입력해주세요 : ");
		
		try{
			pCount = sc.nextInt();
		} catch(Exception e){
			System.out.println("잘못된 입력입니다.");
			return getPeopleCount();
		}
		
		if(pCount < 2){
			System.out.println("최소 두 명의 인원이 필요합니다.");
			return getPeopleCount();
		}
		
		return pCount;
	}
	
	public boolean checkMinNum(int input, int compareInt){
		
		boolean result = true;
		
		if(input < compareInt){
			result = false;
		}
		return result;
	}
}
